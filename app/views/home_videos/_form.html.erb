<%= form_for(@video) do |f|%>

  <%= render 'devise/shared/error_messages', resource: f.object %>

  <div class="form-group field">
    <%= f.label :title %><br />
    <%= f.text_field :title, maxlength: 34, class: "form-control"  %>
  </div>

  <div class="form-group field">
    <%= f.label :link %><br />
    <%= f.text_area :link, maxlength: 300, class: "form-control"  %>
  </div>

  <div class="actions">
    <%= f.submit "Salvar", class: "btn btn-secondary btn-block" %>
  </div>

<% end %>