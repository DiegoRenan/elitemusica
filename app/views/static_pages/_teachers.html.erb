<div id="teachers">

  <div class="container">
    
    <center>
      <h2 class="text-dark">Professores em Destaque</h2>
      <h4 class="text-muted">Colaboradores</h4>
    </center>

    <div class="row" style="margin-top: 70px">
      
      <% @teachers.each do |teacher| %>
        <div class="col-md-4">
          
          <div class="card card-teachers">
            <center>
              <% if teacher.image.attached? %> 
                <%= image_tag teacher.image , class: "card-img-top img-teachers", width: '60px' %>
              <% end %>

              <h4 class="text-info"><%= teacher.name %></h4> 
              <div class="text-secondary">
                <%= teacher.job %>
              </div>
              <div class="d-flex justify-content-center"> 
                <%= link_to image_tag('fb.png', width: '30px'), teacher.facebook, target: :_blank %>
                <%= link_to image_tag('instragram.png', width: '30px'), teacher.instagram, target: :_blank %>
              </div>
            </center>
          </div>

        </div>
      <% end %>

    </div>

  </div>

</div>